<div class="container">
  <div>
    <h1><%= @cocktail.name %></h1>
  </div>

  <div>
    <div>
        <%= cl_image_tag @cocktail.photo, height: 600, width: 800, crop: :fill %>
    </div>
    <h3>Ingredients</h3>
    <% @cocktail.doses.each do |dose| %>

    <div>
      <%= dose.ingredient.name %> - <%= dose.description %> --- <%= link_to "Remove", dose_path(dose), method: :delete %>
    </div>

    <% end %>
  </div>
  <div>
    <h3>Add an ingredient </h3>
    <%= render 'doses/form', dose: @dose, cocktail: @cocktail %>
  </div>
  <div>
    <%= link_to "Back to index", root_path %>
  </div>
</div>
