<div class="container">
  <h1>Welcome to Mr Cocktail!</h1>
  <div class="row">
    <% @cocktails.each do  |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3">
        <%= link_to cocktail_path(cocktail) do %>
          <div style="margin: 10px 0;">
            <% if cocktail.photo.file.nil? %>
              <div style="border: 1px solid black; height: 256px; display:flex; align-items: center; justify-content: center;">
                <%= sanitize("<p>-- No picture --</p>") %>
              </div>
            <% else %>
              <div style="background-image: url(<%= cocktail.photo.url(:thumbnail) %>); height: 256px; background-size: cover;
              background-position: center;"></div>
            <% end %>
            <p style="margin-top: 10px; text-align: center;">
              <%= cocktail.name %>
            </p>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <br>
  <%= link_to "Add a new cocktail", new_cocktail_path %>
</div>

