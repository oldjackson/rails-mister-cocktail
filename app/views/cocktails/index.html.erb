<div class="container">
  <h1>Our cocktails</h1>

  <% @cocktails.each do  |cocktail| %>
    <div>
      <%= link_to (image_tag cocktail.photo.url(:thumnail), alt: cocktail_name) , cocktail_path(cocktail) %>
      <br>
      <%= link_to cocktail.name, cocktail_path(cocktail) %>
    </div>
    <br>
  <% end %>

  <%= link_to "Add a new cocktail", new_cocktail_path %>
</div>
