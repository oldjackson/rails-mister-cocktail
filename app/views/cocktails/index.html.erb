<div class="container">
  <h1 class="text-center">Welcome to Mr Cocktail!</h1>
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 full-padded">
        <%= link_to cocktail_path(cocktail) do %>
          <div class="card">
            <div class="thumb-wrapper">
              <% if cocktail.photo.file.nil? %>
                <div class="empty-thumbnail">
                  <p>-- No picture --</p>
                </div>
              <% else %>
                <div class="pic-thumbnail" style="background-image: url(<%= cocktail.photo.url(:thumbnail) %>);"></div>
              <% end %>
            </div>
            <div class="cocktail-label">
              <p><%= cocktail.name %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
  <br>
  <div class="text-center">
    <%= link_to "Add a new cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>

